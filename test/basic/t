  if true {x} else {
    let {foo: z} = x;
    let zz : bool = z;
    { foo: 42 }
  }
}, snd: fn (x) {
  if true {x} else {
    let {foo: z} = x;
    let zz : int = z;
    { foo: 42 }
  }
}}
