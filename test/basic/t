>     fun (x2, y) ret2 {
>       match <true> {
>         true() -> {
>           ret2(x2)
>         };
>         false() -> {
>           ret2(y)
>         }
>       }
>     };
>   let x2 = choose(0: x, 1: (foo: 5));
>   ret(idf(0: x2))
> });
