> });
> done

# nested constraints, garbage variables
fn (x) { (fn(y) { y.foo.bar })({foo:{bar:x}}) }
> fn (x) { (fn (y) { y.foo.bar })({foo: {bar: x}}) }
>   fn [A](x: A) -> A {
>     (fn [A_2](y: {foo: {bar: A_2, ...}, ...}) -> A_2 { y.foo.bar })(
>       {foo: {bar: x}}
>     )
>   }
> [A] (A) -> A
> let  = %yield(0: fun (x) ret {
>   ret(fun (y) ret2 { let foo = y.(foo); ret2(foo.(bar)) }(0: (foo: (bar: x))))
> });
> done

